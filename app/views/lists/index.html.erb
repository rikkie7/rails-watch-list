<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1"><i class="fa-solid fa-film"></i></span>
    <div class="d-flex">
      <p class="me-5 align-items-center mb-0"><%=link_to "My List", lists_path, class: "text-decoration-none"%></p>
      <p class="align-items-center mb-0"><%=link_to "New List", lists_new_path, class: "text-decoration-none"%></p>
    </div>
  </div>
</nav>

<div style="position:relative;">
<%= image_tag "cinema.jpg", alt: "cinem picture", width: 1800 %>
<h1 class="text-center" style="position:absolute; top:150px; left: 320px;">Welcome to your personalised movie lists</h1>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h3>My Lists</h3>
    <%=button_to "Create a movie list", lists_new_path, method: :get%>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="cards col-4 mb-3" style="position:relative">
        <%= image_tag list.image_url, alt: list.name, width: 400 %>
        <p style="position:absolute; top:80px; left: 150px;"><%= link_to list.name, list_path(list), class: "text-decoration-none text-light" %></p>
      </div>
    <% end %>
  </div>
</div>
